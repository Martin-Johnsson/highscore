const mongoose = require('mongoose');

const scoreSchema = new mongoose.Schema({
  game: {
    type: String,
    required: true,
    min: 25,
    max: 50,
  },
  player: {
    type: String,
    required: true,
    min: 25,
    max: 50,
  },
  score: {
    type: String,
    required: true,
    min: 25,
    max: 50,
  },
  score_date: {
    type: Date,
    required: true,
    default: () => Date.now(),
    immutable: true,
  },
});

module.exports = mongoose.model('Score', scoreSchema);
